apiVersion: v1
kind: Secret
metadata:
  name: business-intent-agent-secrets
  namespace: intent-platform
type: Opaque
stringData:
  # IMPORTANT: Replace these values with your actual credentials
  # For Anthropic API key, get it from: https://console.anthropic.com/
  anthropic-api-key: "YOUR_ANTHROPIC_API_KEY_HERE"

  # API Authentication (v1.1.0+)
  # Default API key for development/testing
  default-api-key: "dev-api-key-12345"

  # Admin secret for API key management endpoint
  # IMPORTANT: Change this in production!
  admin-secret: "YOUR_SECURE_ADMIN_SECRET_HERE"

  # PII Masking (v1.1.0+)
  # Salt for hashing PII data before sending to AI
  # IMPORTANT: Use a cryptographically random value in production!
  pii-hash-salt: "YOUR_SECURE_RANDOM_SALT_HERE"

  # MCP Server URLs (update these based on your setup)
  mcp-bss-url: "http://bss-oss-mcp-service:8080"
  mcp-knowledge-graph-url: "http://knowledge-graph-mcp-service:8080"
  mcp-customer-data-url: "http://customer-data-mcp-service:8080"
